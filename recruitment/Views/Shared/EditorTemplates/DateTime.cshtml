@model Nullable<DateTime>

@{
    DateTime dt = DateTime.Now;
    if (Model != null)
    {
        dt = (System.DateTime)Model;

    }
    @Html.TextBox("", String.Format("{0:dd/MM/yyyy}", dt.ToShortDateString()),
     new { @class = "datefield form-control text-box single-line",
         type = "string", id = ViewData.TemplateInfo.GetFullHtmlFieldName(""), name = ViewData.TemplateInfo.GetFullHtmlFieldName("")
     })
    //datefield
} 

